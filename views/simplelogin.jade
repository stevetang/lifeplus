extends layout

block header
  meta(name='description', content='Simple Login Page')
  meta(name='author', content='stang.elite.group')
  title Simple Sign-in Page
  // Custom styles for this template
  link(href='/css/signin.css', rel='stylesheet')

block content
  .container
    form.form-signin(action='/login', method='post')
      h2.form-signin-heading Please sign in
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(name='nInputEmail', type='email', placeholder='Email address', required='', autofocus='')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(name='nInputPassword', type='password', placeholder='Password', required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
  // /container
  // IE10 viewport hack for Surface/desktop Windows 8 bug
  script(src='/js/ie10-viewport-bug-workaround.js')
