extends layout

block header
  meta(name='description', content='ALL Quests')
  meta(name='author', content='stang.elite.group')
  title ALL Quests
  // Custom styles for this template
  link(href='/css/offcanvas.css', rel='stylesheet')

block content
  nav.navbar.navbar-fixed-top.navbar-inverse
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') ANKH+
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='/quests') Home
          li
            a(href='/createquest') Create Quest
          li
            a(href='/accountprofile') Account Profile
      // /.nav-collapse
    // /.container
  // /.navbar
  .container
    .row.row-offcanvas.row-offcanvas-right
      .col-xs-12.col-sm-12
        .jumbotron
          h1 Hello, world!
          p
            | This is an example to show the potential of an offcanvas layout pattern in Bootstrap. Try some responsive-rangviewport sizes to see it in action.
        .row.auto-wrap
          for val, index in quests.rows
            .col-xs-12.col-lg-4
              h2 #{val.title}
              p.text-wrap
                | #{val.description}
              p
                a.btn.btn-default(href='#', role='button') View details »
            // /.col-xs-12.col-lg-4
          // /.for
        // /row
      // /.col-xs-12.col-sm-9
    // /row
    hr
    footer
      p © Company 2014
  // /.container
  //
    Bootstrap core JavaScript
    ==================================================
  // Placed at the end of the document so the pages load faster
  script(src='/js/jquery.min.js')
  script(src='/js/bootstrap.min.js')
  // IE10 viewport hack for Surface/desktop Windows 8 bug
  script(src='/js/ie10-viewport-bug-workaround.js')
  script(src='/js/offcanvas.js')
